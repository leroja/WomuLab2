<Page
    x:Class="Lab2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lab2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        
        <StackPanel Margin="0,0,10,0" d:LayoutOverrides="LeftPosition, RightPosition" Height="290" VerticalAlignment="Top">
            <TextBlock x:Name="textBlock" TextWrapping="Wrap">
            	<Run Text="Test"/>
            </TextBlock>
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Enter something" RenderTransformOrigin="1.416,-2.253"/>
            <StackPanel Height="100">
                <TextBox x:Name="Input" TextWrapping="Wrap" Text="Enter something here:"/>
                <Button x:Name="Enter_button" Content="enter" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="123,0,128,0" Click="Button_Click"/>
            </StackPanel>
            <TextBlock x:Name="Output" TextWrapping="Wrap" Text=""/>
            <ListView x:Name="listView" Height="450"/>
        </StackPanel>
    </Grid>
</Page>
